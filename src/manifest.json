{
  "name": "RSS 60s"
  , "version": "1.0"
  , "manifest_version": 2
  , "description": "__MSG_manifestDescription__"
  , "default_locale": "en"
  , "homepage_url": "https://github.com/duylam/rss60s"
  , "icons": {
    "16": "images/app16.png" // the favicon for an extension's pages
    , "48": "images/app48.png" // in extensions management page (chrome://extensions)
    , "128": "images/app128.png" // in Chrome Web Store
  }
  , "background": { 
    "scripts": ["bootstrap.js"]
    , "persistent": true
  }
  , "browser_action": {
    "default_icon": {
      "19": "images/browser-action-19.png"
      , "38": "images/browser-action-38.png"
    }
    , "default_title": "__MSG_manifestAccessIconLabel__"
  }
  , "permissions": [
    "http://*/*", "https://*/*"
    , "webRequest" 
    , "activeTab"
  ]
  , "web_accessible_resources": [
    "images/warning.png"
    , "fonts/foundation-icons.woff"
    , "pages/*.htm" // to enable openning options.htm from content script
  ]
  , "options_ui": {
    "page": "pages/options.htm"
    , "chrome_style": true
  }
}